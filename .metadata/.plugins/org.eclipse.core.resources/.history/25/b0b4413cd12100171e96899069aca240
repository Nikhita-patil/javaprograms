package dataStructure;
import java.util.*;
import java.util.ArrayDeque;
import java.util.Queue;
public class BankingQueue {
	public static void main(String[] args)
	{
		Queue queue=new ArrayDeque();
		Scanner scanner=new Scanner(System.in);
		System.out.println(("enter the number of user"));
		int num_user=scanner.nextInt();
		for(int i=0;i<num_user;i++)
		{
			System.out.print("Enter The Name:");
			String name = scanner.next();
			System.out.print("Enter The id:");
			int id = scanner.nextInt();
			System.out.print("Enter The amount:");
			double amount = scanner.nextInt();
            queue.add(new Banking(name,id,amount));
         }
	   Banking bank = null;
		int count = 0;
		boolean nextUser=true; 
		boolean flag1 = true;
		do {

			System.out.println("1. Deposit ");
			System.out.println("2. withdrawal");
			System.out.println("3. Exit");
			System.out.print("Enter the choice");
			int character = scanner.nextInt();
			
			
			if (count == 0 && nextUser){
				System.out.println("Next User");
				bank= (Banking) queue.remove();
				num_user--;
			}	
			nextUser = false;
			switch (character) {

			
			case 1:
				System.out.println("Deposit amount is:");
				System.out.println("Your balance is:"+bank.deposit(scanner.nextDouble()));
				nextUser = false;
				count++;
				break;
			case 2:
				System.out.println("Widthdrawal amount is:");
				System.out.println("Your balance is:"+bank.withdrawal(sc.nextDouble()));
				count++;
				nextUser = false;
				break;
			case 3:
				queue.add(b1);
				count = 0;
				flag1 = false;
				nextUser=true;
				break;
			default:
				System.out.println("Please enter the valid choice");
				break;
			}
		} while (num_user!=0);
	}


}
